<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/padre"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#8DEAEA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/h1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#F10606"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/h2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/h1"
            android:background="#EBF402"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/h3"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:layout_below="@id/h2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="102dp"
            android:layout_marginRight="0dp"
            android:background="#82D50E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/h4"
            android:layout_width="169dp"
            android:layout_height="381dp"
            android:layout_below="@id/h3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#0962EA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/h5"
            android:layout_width="238dp"
            android:layout_height="388dp"
            android:layout_alignTop="@id/h4"
            android:layout_toRightOf="@id/h4"
            android:background="#2C4223">

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>