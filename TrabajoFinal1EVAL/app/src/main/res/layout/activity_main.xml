<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BD2D8"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="93dp"
        android:layout_height="91dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pngwing_com" />

    <TextView
        android:id="@+id/nombreApp"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="AlienList"
        android:textAlignment="center"
        android:textColor="#EA0808"
        android:textColorLink="#000000"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="315dp"
        android:layout_height="81dp"
        android:layout_marginTop="44dp"
        android:text="Bienvenidos a AlienList"
        android:textAlignment="center"
        android:textColor="#157E02"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreApp" />

    <ImageView
        android:id="@+id/mascota"
        android:layout_width="320dp"
        android:layout_height="104dp"
        android:layout_marginTop="28dp"
        android:contentDescription="TODO"
        android:onClick="rotarImagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/goodstuff_no_nonsense_free_space_alien_4" />

    <Button
        android:id="@+id/cambio1"
        android:layout_width="418dp"
        android:layout_height="74dp"
        android:background="@color/colorPrimary"
        android:text="Alta Usuario"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/barraedad"
        android:layout_width="318dp"
        android:layout_height="31dp"
        android:layout_marginBottom="36dp"
        android:max="83"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/calculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/calculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"
        android:text="Calcular"
        app:layout_constraintBottom_toTopOf="@+id/cambio1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:text="Nombre: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mascota" />

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="249dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/mascota" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="Intereses"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/Interesesnuevos"
        android:layout_width="223dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toTopOf="@+id/barraedad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuario"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/verEdad"
        android:layout_width="62dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/barraedad"
        app:layout_constraintTop_toBottomOf="@+id/Interesesnuevos" />

</androidx.constraintlayout.widget.ConstraintLayout>